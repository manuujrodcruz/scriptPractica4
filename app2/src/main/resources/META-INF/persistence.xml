<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="MiUnidadPersistencia" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>edu.pucmm.icc352.modelo.Articulo</class>
        <class>edu.pucmm.icc352.modelo.Usuario</class>
        <class>edu.pucmm.icc352.modelo.Comentario</class>
        <class>edu.pucmm.icc352.modelo.Etiqueta</class>
        <class>edu.pucmm.icc352.modelo.Foto</class>
        <properties>
            <!--<property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:test" />-->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/blog" />
            <property name="jakarta.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="jakarta.persistence.jdbc.user" value="sa" />
            <property name="jakarta.persistence.jdbc.password" value="" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <!--<property name="hibernate.hbm2ddl.auto" value="create" />-->
            <property name="hibernate.show_sql" value="false"/>
            <!-- Indica como será la generación de las tablas en el motor-->
            <!-- ver la documentación: https://docs.oracle.com/javaee/7/tutorial/persistence-intro005.htm -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <!--<property name="eclipselink.logging.level" value="ALL" />-->
        </properties>
    </persistence-unit>
    <!--Puedo tener varias unidades de persistencia en función a la conexión que necesito-->
    <persistence-unit name="Heroku" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>edu.pucmm.icc352.modelo.Articulo</class>
        <class>edu.pucmm.icc352.modelo.Usuario</class>
        <class>edu.pucmm.icc352.modelo.Comentario</class>
        <class>edu.pucmm.icc352.modelo.Etiqueta</class>
        <properties>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.show_sql" value="false"/>
            <!-- Indica como será la generación de las tablas en el motor-->
            <!-- ver la documentación: https://docs.oracle.com/javaee/7/tutorial/persistence-intro005.htm -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <!--<property name="eclipselink.logging.level" value="ALL" />-->
        </properties>
    </persistence-unit>
</persistence>